{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "es2015", "dom"],
    "mapRoot": "",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "outDir": "../../dist/@revector",
    "rootDir": ".",
    "sourceMap": true,
    "target": "es5",
    "inlineSources": true,
    "stripInternal": true,
    "baseUrl": "",
    "paths": {
      "@revector/auth-service": [
        "./auth-service"
      ],
      "@revector/shared": [
        "./shared"
      ],
      "@revector/admin-ui": [
        "./admin-ui"
      ],
      "@revector/email-password-top-nav-login": [
        "./email-password-top-nav-login"
      ],
      "@revector/sign-in-panel": [
        "./sign-in-panel"
      ],
      "@revector/asciidoctor-panel": [
        "./asciidoctor-panel"
      ],
      "@revector/drawer": [
        "./drawer"
      ],
      "@revector/inline-login-form": [
        "./ux/inline-login-form"
      ]

    },
    "skipLibCheck": true,
    "typeRoots": [
      "../../node_modules/@types"
    ],
    "types": [
      "jasmine",
      "firebase"
    ]
  },

  "angularCompilerOptions": {
    "genDir": "../dist",
    "skipTemplateCodegen": true,
    "debug": true
  }
}
