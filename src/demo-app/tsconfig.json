{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "es2015", "dom"],
    "mapRoot": "/",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "outDir": "../../dist/",
    "sourceMap": true,
    "target": "es5",
    "stripInternal": true,
    "baseUrl": "",
    "typeRoots": [
      "../../node_modules/@types"
    ],
    "paths": {
      "@revector/auth-service": [ "../../dist/@revector/auth-service" ],
      "@revector/shared": [ "../../dist/@revector/shared" ],
      "@revector/sign-in-panel": [ "../../dist/@revector/sign-in-panel" ]
    },
    "types": [
      "hammerjs",
      "firebase"
    ]
  },
  "angularCompilerOptions": {
    "genDir": "../../dist",
    "skipTemplateCodegen": true,
    "debug": true
  }
}
